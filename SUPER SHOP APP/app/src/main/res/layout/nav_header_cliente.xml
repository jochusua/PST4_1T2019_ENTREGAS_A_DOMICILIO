<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height_cliente"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin_cliente"
    android:paddingTop="@dimen/activity_vertical_margin_cliente"
    android:paddingRight="@dimen/activity_horizontal_margin_cliente"
    android:paddingBottom="@dimen/activity_vertical_margin_cliente"
    >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profilepic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/photo_female_5"
        app:civ_border="true"
        app:civ_border_color="@color/red_900"
        app:civ_border_width="2dp"
        app:civ_shadow="false"
        app:civ_shadow_radius="0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing_cliente"
        android:text="@string/nav_header_title_cliente"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/emailTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_subtitle_cliente"
        android:textColor="@android:color/white" />

</LinearLayout>
