<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height_cliente"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin_cliente"
    android:paddingTop="@dimen/activity_vertical_margin_cliente"
    android:paddingRight="@dimen/activity_horizontal_margin_cliente"
    android:paddingBottom="@dimen/activity_vertical_margin_cliente"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="86dp"
        android:layout_height="88dp"
        android:contentDescription="@string/nav_header_desc_cliente"
        android:paddingTop="@dimen/nav_header_vertical_spacing_cliente"
        app:srcCompat="@drawable/andreslopez" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing_cliente"
        android:text="@string/nav_header_title_cliente"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_subtitle_cliente" />

</LinearLayout>
